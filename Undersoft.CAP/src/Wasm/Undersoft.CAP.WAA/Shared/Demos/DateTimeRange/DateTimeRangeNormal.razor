<DateTimeRange @bind-Value="@DateTimeRangeValue" OnConfirm="OnConfirm" />
<ConsoleLogger @ref="Logger" class="mt-3" />

@code {
    [NotNull]
    private ConsoleLogger? Logger { get; set; }

    private DateTimeRangeValue DateTimeRangeValue { get; set; } = new();

    private Task OnConfirm(DateTimeRangeValue value)
    {
        Logger.Log($"选择的时间范围是: {value.Start:yyyy-MM-dd} - {value.End:yyyy-MM-dd}");
        return Task.CompletedTask;
    }
}
